@model WebApplicationMongodb.Models.Contato

<h3>Alterar Contato</h3>

@using (Html.BeginForm("Alterar", "Contato", FormMethod.Post, new { id = "formContatoAlterar", name = "formContatoAlterar" }))
{

    @*ID*@
    <div class="row col-md-offset-3 mt-2">
        @Html.LabelFor(Model => Model.Id, new { @class = "col-form-label text-right" })
    </div>
    <div class="col-sm-4">
        @Html.TextBoxFor(Model => Model.Id, new { @class = "form-control", @disabled = "disabled" })
    </div>
    @*NOME*@
    <div class="row col-md-offset-3 mt-2">
        @Html.LabelFor(Model => Model.Nome, new { @class = "col-form-label text-right" })
    </div>
    <div class="col-sm-4">
        @Html.TextBoxFor(Model => Model.Nome, new { @class = "form-control"})
    </div>
    @*ENDEREÇO*@
    <div class="row col-md-offset-3 mt-2">
        @Html.LabelFor(Model => Model.Endereco, new { @class = "col-form-label text-right" })
    </div>
    <div class="col-sm-4">
        @Html.TextBoxFor(Model => Model.Endereco, new { @class = "form-control"})
    </div>
    @*TELEFONE*@
    <div class="row col-md-offset-3 mt-2">
        @Html.LabelFor(Model => Model.Telefone, new { @class = "col-form-label text-right" })
    </div>
    <div class="col-sm-4">
        @Html.TextBoxFor(Model => Model.Telefone, new { @class = "form-control"})
    </div>

    @*SALVAR*@
    <br />

    <div class="button mt-2">
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>

}
