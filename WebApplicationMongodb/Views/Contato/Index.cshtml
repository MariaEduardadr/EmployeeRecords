@model List<WebApplicationMongodb.Models.Contato>

<h2>Contatos</h2>
<h3 class="badge bg-secondary">Cadastro de contatos - Buscar</h3>

<a class="btn btn-secondary" asp-controller="Contato" asp-action="Criar" role="button">Adicionar novo contato</a>
<br>
<table class="table table-success table-striped">

    <tr>
        <th>
            Id
        </th>
        <th>
            Nome
        </th>
        <th>
            Endereço
        </th>
        <th>
            Telefone
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-left">
                @item.Id
            </td>
            <td class="text-left">
                @item.Nome
            </td>
            <td>
                @item.Endereco
            </td>
            <td>
                @item.Telefone
            </td>
        </tr>
    }

</table>

